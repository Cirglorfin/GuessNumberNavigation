<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="juego"
            type="com.example.guessnumbernavigation.data.Juego" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".iu.EndPlayActivity">


        <TextView
            android:id="@+id/tvRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/tvIntroMarginTop"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="@dimen/tvIntroTextSize"
            android:layout_marginLeft="@dimen/tvResMargin"
            android:layout_marginRight="@dimen/tvResMargin"
           />




        <Button
            android:id="@+id/btnVolver"
            android:layout_width="@dimen/btJugarWitdth"
            android:layout_height="@dimen/btJugarHeight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/btJugarMarginTop"
            android:text="@string/btnVolverText"

            />


    </LinearLayout>
</layout>